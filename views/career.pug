if career
	.row.job-listing
		.col-md-6.col-sm-6.col-xs-12
			p #{career.title}
		// end col 6
		.col-md-3.col-sm-3.col-xs-6
			p
				a.btn.btn-outline-black(role='button', data-toggle='modal', data-target='.career-position-' + i)
					| Learn More 
					i.fa.fa-caret-down(aria-hidden='true')
		// end col 3
		.col-md-3.col-sm-3.col-xs-6
			p
				a.btn.btn-outline-black(href=career.app_url, target='_blank')
					| Apply Now 
					i.fa.fa-arrow-circle-right
		// end col 3

		.modal(class='career-position-' + i, tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel')
			.modal-dialog.modal-lg(role='document')
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') Ã—
						h4 #{career.title}
					// end modal header
					.modal-body

						!= career.description

					// end modal body
				// end modal content
			// end modal dialog
		// end modal

	// end job listing
